<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00AE0202">

    <LinearLayout
        android:layout_width="622dp"
        android:layout_height="295dp"
        android:background="#C51414"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="156dp"
                android:layout_height="133dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="68dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/eliminarmesa" />

            <TextView
                android:id="@+id/txtEliminarMesa"
                android:layout_width="346dp"
                android:layout_height="77dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="68dp"
                android:textColor="#F8F5F5"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnSiEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="76dp"
                android:layout_marginTop="76dp"
                android:background="#9F0101"
                android:text="Si"
                android:textColor="#FAF9F9"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/txtEliminarMesa"
                app:layout_constraintVertical_bias="0.384" />

            <Button
                android:id="@+id/btnEliminarNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="84dp"
                android:background="#850303"
                android:text="No"
                android:textColor="#FBFBFB"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnSiEliminar"
                app:layout_constraintTop_toBottomOf="@+id/txtEliminarMesa"
                app:layout_constraintVertical_bias="0.111" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>