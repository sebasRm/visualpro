<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="844dp"
        android:layout_height="446dp"
        android:background="#E8E6E6"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="448dp">

            <TextView
                android:id="@+id/lblDomicilio"
                android:layout_width="368dp"
                android:layout_height="49dp"
                android:layout_marginStart="244dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="casual"
                android:text="Agregar nuevo domicilio"
                android:textColor="#0E0E0E"
                android:textSize="30sp"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/txtIdentificacionCliente"
                app:layout_constraintEnd_toStartOf="@+id/imageView28"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="70dp"
                android:layout_height="53dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="162dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/lblDomicilio"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/fbalona" />

            <AutoCompleteTextView
                android:id="@+id/txtIdentificacionCliente"
                android:layout_width="329dp"
                android:layout_height="54dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="#050505"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Telefono"
                android:inputType="number"
                android:textColor="#090909"
                app:layout_constraintStart_toEndOf="@+id/imageView35"
                app:layout_constraintTop_toBottomOf="@+id/lblDomicilio" />

            <EditText
                android:id="@+id/txtApellidosCliente"
                android:layout_width="239dp"
                android:layout_height="42dp"
                android:backgroundTint="#FDFCFC"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="Apellidos"
                android:inputType="textPersonName"
                android:textColor="#F6F5F5"
                android:textColorHint="#FDFBFB"
                android:visibility="gone"
                tools:layout_editor_absoluteX="88dp"
                tools:layout_editor_absoluteY="208dp" />

            <Button
                android:id="@+id/botonAgregarDomicilio"
                android:layout_width="177dp"
                android:layout_height="47dp"
                android:layout_marginStart="340dp"
                android:layout_marginEnd="331dp"
                android:layout_marginBottom="14dp"
                android:background="#850202"
                android:text="Agregar domicilio"
                android:textColor="#F8F6F6"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pnlDomicilio" />

            <Button
                android:id="@+id/botonModificarDomicilio"
                android:layout_width="177dp"
                android:layout_height="47dp"
                android:layout_marginStart="340dp"
                android:layout_marginEnd="331dp"
                android:layout_marginBottom="14dp"
                android:background="#850202"
                android:text="Modificar domicilio"
                android:textColor="#F8F6F6"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pnlDomicilio"
                app:layout_constraintVertical_bias="0.857" />

            <Button
                android:id="@+id/botonRegistrarCliente"
                android:layout_width="177dp"
                android:layout_height="0dp"
                android:layout_marginStart="353dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="314dp"
                android:background="#850202"
                android:text="Registar numero"
                android:textColor="#F8F6F6"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/pnlDomicilio" />

            <LinearLayout
                android:id="@+id/pnlDomicilio"
                android:layout_width="820dp"
                android:layout_height="210dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="18dp"
                android:background="#2E2E2E"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtIdentificacionCliente">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#DC040B">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="91dp"
                            android:layout_height="31dp"
                            android:text="Estado"
                            android:textColor="#FBFBFB"
                            android:textSize="24sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textoEstado"
                            android:layout_width="250dp"
                            android:layout_height="30dp"
                            android:text="TextView"
                            android:textColor="#FBFBFB"
                            android:textSize="24sp"
                            app:layout_constraintStart_toEndOf="@+id/textView"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pnl"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:visibility="visible">

                    <AutoCompleteTextView
                        android:id="@+id/txtDireccionCliente"
                        android:layout_width="300dp"
                        android:layout_height="51dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="#FDFCFC"
                        android:ems="10"
                        android:fontFamily="casual"
                        android:hint="DirecciÃ³n"
                        android:inputType="textPersonName"
                        android:textColor="#FAF9F9"
                        android:textColorHint="#FDFDFD"
                        app:layout_constraintStart_toEndOf="@+id/imageView33"
                        app:layout_constraintTop_toTopOf="parent" />

                    <AutoCompleteTextView
                        android:id="@+id/txtCliente"
                        android:layout_width="223dp"
                        android:layout_height="49dp"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#FDFCFC"
                        android:ems="10"
                        android:fontFamily="casual"
                        android:hint="Cliente"
                        android:inputType="textPersonName"
                        android:textColor="#FAF9F9"
                        android:textColorHint="#FDFDFD"
                        app:layout_constraintStart_toEndOf="@+id/imageView34"
                        app:layout_constraintTop_toTopOf="parent" />

                    <AutoCompleteTextView
                        android:id="@+id/txtPrecioDomicilio"
                        android:layout_width="197dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:backgroundTint="#FAF6F6"
                        android:ems="10"
                        android:fontFamily="casual"
                        android:hint="valor del domicilio"
                        android:inputType="number"
                        android:textColor="#FDFCFC"
                        android:textColorHint="#FFFFFF"
                        app:layout_constraintStart_toEndOf="@+id/imageView36"
                        app:layout_constraintTop_toBottomOf="@+id/txtCliente" />

                    <AutoCompleteTextView
                        android:id="@+id/txtRefenciaCliente"
                        android:layout_width="387dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="28dp"
                        android:backgroundTint="#FDFCFC"
                        android:ems="10"
                        android:fontFamily="casual"
                        android:hint="Referencia (Opcional)"
                        android:inputType="textPersonName"
                        android:textColor="#FFFEFE"
                        android:textColorHint="#F8F6F6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtDireccionCliente" />

                    <ImageView
                        android:id="@+id/imageView33"
                        android:layout_width="79dp"
                        android:layout_height="64dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@mipmap/ddireccion" />

                    <ImageView
                        android:id="@+id/imageView34"
                        android:layout_width="69dp"
                        android:layout_height="58dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toEndOf="@+id/txtDireccionCliente"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@mipmap/dcliente" />

                    <ImageView
                        android:id="@+id/imageView36"
                        android:layout_width="69dp"
                        android:layout_height="58dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="20dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toEndOf="@+id/txtRefenciaCliente"
                        app:layout_constraintTop_toBottomOf="@+id/imageView34"
                        app:srcCompat="@mipmap/precio" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/idCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:visibility="gone"
                tools:layout_editor_absoluteX="283dp" />

            <ImageView
                android:id="@+id/imageView35"
                android:layout_width="53dp"
                android:layout_height="54dp"
                android:layout_marginStart="216dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/pnlDomicilio"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@mipmap/tel" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>