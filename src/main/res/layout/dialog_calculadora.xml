<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="833dp"
        android:layout_height="492dp"
        android:background="#A80101"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/totalFactura"
                android:layout_width="199dp"
                android:layout_height="43dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="88dp"
                android:text="TextView"
                android:textColor="#FBFBFB"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="164dp"
                android:layout_marginTop="88dp"
                android:text="Total a cancelar:"
                android:textColor="#FBFBFB"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="164dp"
                android:layout_marginTop="40dp"
                android:text="Pago del cliente:"
                android:textColor="#FBFBFB"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="164dp"
                android:layout_marginTop="60dp"
                android:text="Pegreso del cliente:"
                android:textColor="#FBFBFB"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <EditText
                android:id="@+id/pagoCliente"
                android:layout_width="233dp"
                android:layout_height="60dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#FBF8F8"
                android:ems="10"
                android:inputType="number"
                android:textColor="#FFFEFE"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/totalFactura" />

            <TextView
                android:id="@+id/cambio"
                android:layout_width="172dp"
                android:layout_height="42dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="40dp"
                android:textColor="#FDFDFD"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/pagoCliente" />

            <Button
                android:id="@+id/pagar"
                android:layout_width="151dp"
                android:layout_height="58dp"
                android:layout_marginTop="112dp"
                android:background="#770202"
                android:text="Imprimir"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.516"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cambio" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>