<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.loginActivity">

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="1284dp"
        android:layout_height="802dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/fondologin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="634dp"
        android:layout_height="680dp"
        android:background="#B45E0202"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="428dp"
        android:layout_height="268dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/restaurante" />

    <EditText
        android:id="@+id/textUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="#FAFAFA"
        android:ems="10"
        android:foregroundTint="#FFFFFF"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:shadowColor="#FFFFFF"
        android:textColor="#F7F6FA"
        android:textColorHint="#FCFDFD"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <Button
        android:id="@+id/botonInciarSesion"
        android:layout_width="146dp"
        android:layout_height="62dp"
        android:layout_marginBottom="60dp"
        android:background="#770404"
        android:text="Iniciar Seci칩n"
        android:textColor="#FDFCFC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textContrase침a" />

    <EditText
        android:id="@+id/textContrase침a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FBF9F9"
        android:ems="10"
        android:hint="Contrase침a"
        android:inputType="textPassword"
        android:textColorHint="#FCFDFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUsuario" />

</androidx.constraintlayout.widget.ConstraintLayout>