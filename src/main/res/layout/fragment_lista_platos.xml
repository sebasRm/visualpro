<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".interfaz.PresentacionActivity">

    <LinearLayout
        android:layout_width="274dp"
        android:layout_height="112dp"
        android:layout_marginTop="16dp"
        android:background="#00807E7E"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#70878585">

            <ImageView
                android:id="@+id/imgPlatos_menu"
                android:layout_width="274dp"
                android:layout_height="113dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/tacos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/tacos"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="273dp"
                android:layout_height="44dp"
                android:background="#BC555454"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtPrecio_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio"

                        android:textColor="#FBF9F9"
                        app:layout_constraintStart_toEndOf="@+id/textView7"
                        app:layout_constraintTop_toBottomOf="@+id/txtNombrePlato_menu" />

                    <TextView
                        android:id="@+id/txtEstado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="204dp"

                        android:text="Precio"
                        android:textColor="#FBF9F9"
                        app:layout_constraintStart_toEndOf="@+id/textView7"
                        app:layout_constraintTop_toBottomOf="@+id/txtNombrePlato_menu" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="$"
                        android:textColor="#4CAF50"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtNombrePlato_menu" />

                    <TextView
                        android:id="@+id/txtNombrePlato_menu"
                        android:layout_width="153dp"
                        android:layout_height="19dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:text="Nombre plato"
                        android:textColor="#FBFAFA"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/categoria_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Categoria"
                        android:textColor="#FFFDFD"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>